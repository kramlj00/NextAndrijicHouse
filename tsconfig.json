{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@components": [
        "components/"
      ],
      "@config": [
        "config/"
      ],
      "@assets/*": [
        "public/assets/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@locales/*": [
        "locales/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
